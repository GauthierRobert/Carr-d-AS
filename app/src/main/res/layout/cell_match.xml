<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@drawable/cardview">

        <TextView
            android:id="@+id/info_match_cell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/point_vote_cell"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:text="Info match"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date_match_cell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/info_match_cell"
            android:layout_alignBottom="@+id/arrow_image"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="0dp"
            android:text="Date"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/status_match_cell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/date_match_cell"
            android:layout_marginStart="100dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/date_match_cell"
            android:text="STATUS"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/arrow_image"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:src="@drawable/arrow" />


    </RelativeLayout>
</android.support.v7.widget.CardView>