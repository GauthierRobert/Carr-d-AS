<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/info_match_cell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/point_vote_cell"
        android:layout_marginTop="0dp"
        android:paddingLeft="5dp"
        android:text="Info match"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/date_match_cell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/info_match_cell"
        android:layout_alignBottom="@+id/arrow_image"
        android:paddingLeft="5dp"
        android:text="Date"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/status_match_cell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/arrow_image"

        android:layout_alignBottom="@+id/arrow_image"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="14dp"
        android:layout_toStartOf="@+id/arrow_image"
        android:text="STATUS"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/arrow_image"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:src="@drawable/arrow" />


</RelativeLayout>
