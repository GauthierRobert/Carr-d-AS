<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lhc_red_dark"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/match_description_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/match_date_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/Info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_gravity="center_vertical"
            android:background="@color/transparent"
            android:drawableStart="@drawable/info"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingStart="40dip"
            android:singleLine="true"
            android:text="Informations"
            android:textSize="15sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <Button
            android:id="@+id/votes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_gravity="center_vertical"
            android:background="@color/transparent"
            android:drawableStart="@drawable/vote"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingStart="40dip"
            android:singleLine="true"
            android:text="Votes/Rankings"
            android:textSize="15sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <Button
            android:id="@+id/counting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_gravity="center_vertical"
            android:background="@color/transparent"
            android:drawableStart="@drawable/polling"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingStart="40dip"
            android:singleLine="true"
            android:text="Counting"
            android:textSize="15sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <Button
            android:id="@+id/live"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_gravity="center_vertical"
            android:background="@color/transparent"
            android:drawableStart="@drawable/live"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingStart="40dip"
            android:singleLine="true"
            android:text="Score"
            android:textSize="15sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <Button
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_gravity="center_vertical"
            android:background="@color/transparent"
            android:drawableStart="@drawable/maintenance"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingStart="40dip"
            android:singleLine="true"
            android:text="edit"
            android:textSize="15sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <Button
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_gravity="center_vertical"
            android:background="@color/transparent"
            android:drawableStart="@drawable/delete"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingStart="40dip"
            android:singleLine="true"
            android:text="Delete"
            android:textSize="15sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>


</LinearLayout>