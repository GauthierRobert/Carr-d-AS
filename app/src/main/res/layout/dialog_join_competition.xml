<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/a"
        android:background="@color/lhc_red"
        android:src="@drawable/lhc_logo"
        android:scaleType="fitStart" />

    <TextView
        android:id="@+id/text_dialog_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/a"
        android:layout_alignEnd="@+id/a"
        android:layout_alignBottom="@+id/a"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="300dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="13dp"
        android:gravity="center_horizontal"
        android:text="TITLE"
        android:textColor="#ff000000"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEXTO"
        android:id="@+id/text_dialog_2"
        android:layout_below="@+id/a"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        android:textColor="#ff000000"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />


</RelativeLayout>